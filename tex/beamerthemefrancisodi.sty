\RequirePackage{color}
\RequirePackage{fontspec}

\setsansfont[
    Extension=.otf,
    UprightFont= *-regular,
    BoldFont=*-bold,
    ItalicFont=*-italic,
    BoldItalicFont=*-bolditalic,
]{texgyreheros}

%disable navigation
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{itemize items}[circle]

\setbeamertemplate{title page}{
  \hfill\textbf{\LARGE\MakeUppercase{\expandafter\protect\inserttitle}}

  \hfill{\large{\insertsubtitle}}
  \vspace*{2.0cm}

}

\definecolor{odigray}{RGB}{191,191,191}

\setbeamertemplate{frametitle}
{
\vspace{0.6cm}
\color{odigray}
{\Huge\insertframetitle}
\par
}

% footer with name, date and page numbers
\setbeamercolor{footline}{fg=gray}
\setbeamertemplate{footline}{
  \ifbeamer@plainframe
  \else
    \leavevmode\tiny%
    %\hspace*{3.3cm}%
    \hspace{0.75cm}
    \includegraphics[height=0.25cm]{by-sa.eps}
    \hspace{0.75cm}
%    \makebox[4cm][l]{\insertauthor}%
%    \makebox[4cm][l]{\insertdate}%
      \hfill\insertframenumber/\inserttotalframenumber\hspace{5mm}%
    \vspace{3mm}%
  \fi
}
